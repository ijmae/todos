<!doctype html>

<head>
    <%- include('./Partial/load_css.ejs', {title:title}) -%>
</head>

<body>
    <h1 class="jumbotron text-center">TODO LIST</h1>
    <div class="input-group mb-3 pl-3 pr-3">
        <input maxlength="20" type="text" class="form-control" placeholder="Nhập tên nhóm" aria-label="Nhập tên nhóm"
            aria-describedby="basic-addon2" id=iptNewJobGroup>
        <button class="btn btn-outline-primary btnNewJobGroup ml-1" type="button" id="btnNewJobGroup">Tạo
            mới</button>
    </div>


    <div class="card-columns m-3">
        <!-- jobgroup -->
        <% jobGroups.forEach(function(jobGroup) { %>
        <% - include('./Partial/load_group.ejs', { jobGroupName: jobGroup.name, jobGroupId: jobGroup._id, jobs: jobGroup.jobs }) %>
        <% }); %>
        <!-- jobgroup -->
    </div>

    <!-- Modal Delete Job-->
    <div class="modal fade" id="deleteJobModal" tabindex="-1" role="dialog" aria-labelledby="deleteJobModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteJobModalLabel">Xác nhận</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Đóng">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body delete-modal-body">
                    Xóa ...
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
                    <button type="button" id="btnAcceptDeleteJobModal" class="btn btn-danger">Xóa</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal Edit Job-->
    <div class="modal fade" id="editJobModal" tabindex="-1" role="dialog" aria-labelledby="editJobModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="editJobModalLabel">Sửa đổi</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Đóng">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <textarea name="editJobName" id="editJobName" wrap="soft"></textarea>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
                    <button type="button" id="btnAcceptEditJobModal" class="btn btn-info">Đồng
                        ý</button>
                </div>
            </div>
        </div>
    </div>

    <%- include('./Partial/load_script.ejs') -%>
</body>

</html>